---
import Layout from "../../layouts/Layout.astro";
import { albums } from "@/lib/albums.ts";
import { recentlyPlayed } from "@/lib/recently-played";
import { featuredAlbums } from "@/lib/featured-albums";

import { albumStrings } from "@/utils/strings";

const { id } = Astro.params;
const data = [...albums, ...recentlyPlayed.map((track) => track.album), ...featuredAlbums];
const album = data.find((d) => d.id === id);
---

<Layout title="Spotify">
  <div id="album-container" class="relative flex flex-col h-full bg-zinc-900 overflow-x-hidden">

    <header class="flex flex-row gap-8 px-6 mt-12">
      <picture class="aspect-square w-52 h-52 flex-none">
        <img src={album?.cover} alt={`Cover of ${album?.title}`} class="object-cover w-full h-full shadow-lg" />
      </picture>

      <div class="flex flex-col">
        <h2 class="flex flex-1 items-end text-sm mt-8">Playlist</h2>
        <h1 class={`font-bold mt-2 text-white ${ album && album.title.length < 25 ? "text-8xl" : "text-6xl"}`}>
          {album?.title}
        </h1>

        <div class="flex-1 flex items-end text-sm text-gray font-normal">
          <span class="text-white font-bold mr-1">{album?.owner}</span>
          <span class="text-white mr-1"> {" Â· " + album?.items.length + albumStrings.songs}</span>
          <span class="text-gray">{albumStrings.albumDuration}</span>
        </div>

      </div>
      
    </header>
  </div>
</Layout>
